{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Query": "Warning"
    }
  },
  "Cors": {
    "Origins": ["http://localhost:3000"]
  },
  "Pagination": {
    "MaxPageSize": 100,
    "DefaultPageSize": 50
  },
  "Similarity": {
    // Right now, similar problems are turned off for they have not been
    // tested tweaked properly yet and I have a feeling they work a bit randomly.
    // The goal is to release them with a UI where users can tweak the weights by
    // themselves. Ideally also paste a problem and seek similar ones to the one
    // they pasted (though this might be expensive for we'd either need an
    // embdeeing service somewhere -- the one in the codebase would not run
    // on any cheap server...
    "MaxSimilarProblems": 0,
    "MinSimilarityScore": 0.85
  }
}
